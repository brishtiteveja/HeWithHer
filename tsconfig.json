{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "packages/dante3/src/blocks/videoRecorder/index.js",
    "packages/dante3/src/blocks/videoRecorder/MediaRecorder.js",
    "packages/dante3/src/blocks/extension.js",
    "packages/dante3/src/renderer.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}